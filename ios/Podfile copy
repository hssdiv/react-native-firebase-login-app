require_relative '../node_modules/react-native/scripts/react_native_pods'
require_relative '../node_modules/@react-native-community/cli-platform-ios/native_modules'

platform :ios, '10.0'

target 'firebase_react_native_app' do
  config = use_native_modules!

  use_react_native!(:path => config["reactNativePath"])

  pod 'RNSensorsNativeModule', :path => '../node_modules/@hssdiv/react-native-sensors-native-module'

  target 'firebase_react_native_appTests' do
    inherit! :complete
    # Pods for testing
  end

  # Enables Flipper.
  #
  # Note that if you have use_frameworks! enabled, Flipper will not work and
  # you should disable these next few lines.
  use_flipper!
  post_install do |installer|
    flipper_post_install(installer)
  end
end

target 'firebase_react_native_app-tvOS' do
  # Pods for firebase_react_native_app-tvOS

  target 'firebase_react_native_app-tvOSTests' do
    inherit! :search_paths
    # Pods for testing
  end
end

#pod 'Firebase/Analytics'
pod 'Firebase/Firestore'
pod 'Firebase/Database'
pod 'Firebase/Storage'
pod 'Firebase/Auth'
pod 'RNVectorIcons', :path => '../node_modules/react-native-vector-icons'